<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".about.AboutFragment"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide"
            android:textSize="12sp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_margin="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hal-hal berikut yang perlu dilakukan secara berkala oleh pengguna :"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1. Menjaga Panel Surya Tetap Bersih"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2. Gunakan Air untuk membersihkan panel surya"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3. Gunakan sikat dari bahan halus"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4. Menyeka panel surya saat masih basah"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5. Lakukan pada pagi atau sore hari"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6. Memonitor kinerja sistem panel surya"
            />

    </LinearLayout>


</RelativeLayout>